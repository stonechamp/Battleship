<Window x:Class="Battleship.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Battleship"
        mc:Ignorable="d"
        Title="GameWindow" Height="1000" Width="900" Loaded="Window_Loaded">
    <ScrollViewer>
        
        <StackPanel>
            <TextBlock x:Name="lblGameTimer"   HorizontalAlignment="Left" Margin="61, 26, 0 , 0" Text="5" VerticalAlignment="Top" FontSize="20"/>
            <TextBlock Text="Player" HorizontalAlignment="Center" FontSize="20" Margin="10"/>
                <StackPanel x:Name="panelPlayer" Margin="50">

                </StackPanel>
                <TextBlock Text="Enemy" HorizontalAlignment="Center" FontSize="20" Margin="10"/>
                <StackPanel x:Name="panelEnemy" Margin="50">

                </StackPanel>

            </StackPanel>
    </ScrollViewer>
</Window>